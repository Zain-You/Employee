<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zain.user.mapper.AdminMapper">
    <select id="selectAll" resultType="com.zain.user.entity.Admin">
        SELECT * FROM admin
        <where>
            <if test="name!=null"> name like concat('%',#{name},'%')</if>
        </where>
        order by id desc
    </select>

    <insert id="add" parameterType="com.zain.user.entity.Admin">
        insert into `admin` (username,password,role,name)
        values(#{username},#{password},#{role},#{name})
    </insert>

    <update id="updateById" parameterType="com.zain.user.entity.Admin">
        update `admin` set username =#{username},  password = #{password},  role = #{role}
        where id = #{id}
    </update>
</mapper>